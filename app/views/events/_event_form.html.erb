<% unless event.errors.empty? %>
  <div id="validation_errors">
    The following errors occurred:
    <ul>
      <% event.errors.each do |attr, msg| %>
        <li><i><%= "#{attr} #{msg}"  %></i></li>
      <% end %>
    </ul>
  </div>
 <% end %>
<div>
  <%= form_for event, :url => {:action => 'create'} do |f| %>
    <%= f.text_field :start_date, 'data-provide' => 'datepicker', :value => Date.today %>&nbsp;Start Date
    <br/>
    <%= f.text_field :end_date, 'data-provide' => 'datepicker', :value => Date.today %>&nbsp;End Date
    <br/>
    <%= f.text_area :description, :size => '43x5' %>
    <p/>
    <%= f.button "Create", :onclick => 'create_event()', :type => 'button' %>
  <% end %>
</div>
