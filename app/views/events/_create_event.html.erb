<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <%= @event.errors.full_messages.first %>
  </div>
<% end %>
<%= form_with model: event do |form| %>
  <div class="form-group">
    <%= form.text_field :title, class: 'form-control', placeholder: 'Title', required: true %>
  </div>
  <div class="form-group">
    <%= form.text_field :description, class: 'form-control', placeholder: 'Description', required: true %>
  </div>
  <div class="input-group input-daterange">
      <%= form.text_field :start_date, class: 'datepicker form-control', data: { date_format:"dd-mm-yyyy" }, placeholder: 'Start Date', required: true,  autocomplete: 'off' %>
      <div class="input-group-addon">to</div>
      <%= form.text_field :end_date, class: 'datepicker form-control', data: { date_format:"dd-mm-yyyy" }, placeholder: 'End Date', required: true,  autocomplete: 'off' %>
  </div><br/>
  <%= form.submit 'Create Event', class: 'btn btn-success' %>
<% end %>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>
