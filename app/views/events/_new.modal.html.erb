<div class="modal fade" id="new-event-modal" tabindex="-1" role="dialog" aria-labelledby="new-event-modal-title" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="new-event-modal-title"><%= t('events.new.title') %></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="alert alert-danger" role="alert" id="create-event-alert">
          <span id="warning-message-span"></span>
        </div>
        <%= form_tag(events_path, method: :post) do %>
          <div class="form-group">
            <label for="event-title" class="col-form-label"><%= t('events.new.fields.title') %>:</label>
            <%= text_field_tag('event-title', nil, class: 'form-control') %>
          </div>
          <div class="form-group">
            <label for="event-starts-at" class="col-form-label"><%= t('events.new.fields.starts_at') %>:</label>
            <%= text_field_tag('event-starts-at', nil, class: 'form-control datepicker') %>
          </div>
          <div class="form-group">
            <label for="event-ends-at" class="col-form-label"><%= t('events.new.fields.ends_at') %>:</label>
            <%= text_field_tag('event-ends-at', nil, class: 'form-control datepicker') %>
          </div>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" id="create-event-button">Create</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>
