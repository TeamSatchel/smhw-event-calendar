<h1>Events calendar</h1>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'New Event', new_event_path, remote: true, 'data-toggle' => 'modal', 'data-target': '#events-modal', class: "btn btn-primary pull-right" %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-12">
    <div id="calendar"></div>
  </div>
</div>

<%= render partial: 'modal' %>

<script type="text/javascript">
  $("#calendar").calendar({
    view: 'week',
    events_source: <%= @events.to_json.html_safe %>,
    tmpl_path: "/tmpls/",
    modal: "#events-modal",
    modal_type: "template",
    modal_title : function (e) { return e.title },
    first_day: 1
  });
</script>
