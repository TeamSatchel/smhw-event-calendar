<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}", style: 'color: red;' %>
<% end %>

<%= form_for :event, url: events_path, method: :post do |f| %>
  Title: <%= f.text_field :title %><br />
