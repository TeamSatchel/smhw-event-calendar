<%= simple_form_for @event, remote: true do |f| %>
  <div class="fields_container">
    <%= f.input :title %>
    <%= f.input :description %>
    
    <%= f.input :date_range %>
    <%= f.input_field :start_date, as: :hidden, value: Date.today %>
    <%= f.input_field :end_date, as: :hidden, value: Date.today %>
  </div>
  <div>
    <%= f.button :submit %>
  </div>
<% end %>