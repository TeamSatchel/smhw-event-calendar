.container
  .row
    .col-xs-8.col-xs-offset-2
      %h1= t('app')
      = form_for @new_event, method: :post, html: { class: 'form-horizontal js-form' } do |f|
        .form-group.row
          .col-xs-6
            = f.text_field :title, placeholder: t('placeholders.title'),
                                   autocomplete: :off,
                                   autofocus: true,
                                   class: 'form-control'
          .col-xs-6
            .input-group.col-xs-5.pull-left.date.js-datepicker
              = f.text_field :start_date, placeholder: t('placeholders.start_date'),
                                          autocomplete: :off,
                                          class: 'form-control'
              .input-group-addon
                %span.glyphicon.glyphicon-calendar
            .input-group.col-xs-1.pull-left.text-center.line-height-34= '>>'
            .input-group.col-xs-5.date.js-datepicker
              = f.text_field :end_date, placeholder: t('placeholders.end_date'),
                                        autocomplete: :off,
                                        class: 'form-control'
              .input-group-addon
                %span.glyphicon.glyphicon-calendar
        .form-group.row.col-xs-12
          = f.text_area :description, placeholder: t('placeholders.descritption'),
                                      autocomplete: :off,
                                      class: 'form-control'
        .form-group.row.text-right.col-xs-12
          = f.submit t('buttons.create.event'), class: 'btn btn-primary js-submit'
  .row
    .col-xs-12
      .js-calendar
