<h1>Events calendar</h1>

<div class="row">
  <div class="col-md-12">
    <%= link_to 'Create event', '#', class: "btn btn-primary pull-right" %>
  </div>
</div>

<div class="row mt-3">
  <div class="col-md-12">
    <div id="calendar"></div>
  </div>
</div>

<%= render partial: 'event_modal' %>

<script type="text/javascript">
  var calendar = $("#calendar").calendar({
    view: 'week',
    events_source: <%= @events.to_json.html_safe %>,
    tmpl_path: "/tmpls/",
    modal: "#events-modal",
    modal_type: "template",
    modal_title : function (e) { return e.title },
  });
</script>
